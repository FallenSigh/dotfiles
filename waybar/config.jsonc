    "height": 34,
    "spacing": 4,
    "modules-left": ["custom/launcher", "hyprland/workspaces", "mpris"],
    "modules-center": ["hyprland/window"],
    "modules-right": [
        "cpu",
        "memory",
        "pulseaudio",
        "network",
        "bluetooth",
        "backlight",
        "battery",
        "power-profiles-daemon",
        "tray",
