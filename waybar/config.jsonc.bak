{
    "layer": "top",
    "height": 30,
    "spacing": 6,
    "icon-size": 20,
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        // "cpu",
        // "memory",
        "mpris"
    ],
    "modules-center": ["hyprland/window"],
    "modules-right": [
        "privacy",
        "custom/notification",
        "pulseaudio",
        "network",
        "bluetooth",
        "backlight",
        "tray",
        "clock",
        "group/group-power"
    ],
    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false
        },
        "modules": ["custom/power", "custom/quit", "custom/lock", "custom/reboot"]
    },
    "group/group-pulseaudio": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-pulseaudio",
            "transition-left-to-right": true,
            "click-to-reveal": true
        },
        "modules": ["pulseaudio", "pulseaudio/slider"]
    },
    "group/group-bluetooth": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-bluetooth",
            "transition-left-to-right": true,
            "click-to-reveal": true
        },
        "modules": ["custom/bluetooth", "bluetooth"]
    }, 
    "bluetooth": {
	    "format": "ïŠ” {status}",
	    "format-connected": "ïŠ” {device_alias}",
	    "format-connected-battery": "ïŠ” {device_alias} {device_battery_percentage}%",
	    // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
	    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
	    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
	    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },
    "mpd": {
        "server": "localhost",
        "port": "6600",
        "format": "{stateIcon} {title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
        "tooltip-format": "{stateIcon} {title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
        // "title-len": 10,
        "max-length": 50,
        "on-click": "mpc toggle",
        // "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-click-middle": "playerctl previous",
        "state-icons": { "paused": "â–¶", "playing": "ïŒ" }
    },
    "mpris": {
        "interval": 1,
        "[format]-len": 50,
        "dynamic-len": 50,
        "dynamic-importance-order": ["title", "artist", "position", "length"],
        "dynamic-order": ["title", "position", "length"],
        // "format": "{player_icon} {title} - {artist} [{position}/{length}]",
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "ïŒ",
            "mpv": "ğŸµ"
        },
        "status-icons": {
            "paused": "â–¶"
        }
    },
    "hyprland/workspaces": {
        "format": "{name}",
        // "format": "{name} {windows} ",
        "format-window-separator": " ",
        // "window-rewrite-default": "ï™",
        "window-rewrite-default": "",
        "window-rewrite": {
            "class<google-chrome>": "ï‰¨", // Windows whose classes are "google-chrome"
            "class<org.kde.dolphin>": "ï„•", // Windows whose classes are "filemanager"
            "title<.*youtube.*>": "ï…ª", // Windows whose titles contain "youtube"
            "title<.*bilibili.*>": "", // Windows whose titles contain "bilibili"
            "wezterm": "î•", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
            "code": "ó°¨",
            "class<io.github.waylyrics.Waylyrics>": "",
            "class<musicfox>": "ï€",
            "class<wechat>": "ï‡—",
            "class<.*fcitxfcit.*>": "",
            "title<.*Fcitx5 Input Window.*>": "",
            "class<zoom>": "ï€‚"
        },

        "icon-size": 14,
        "active-only": false,
        "all-outputs": false,
        "persistent-workspaces": {
            "*": 5
        },
        "on-scroll-up": "hyprctl dispatch workspace r-1",
        "on-scroll-down": "hyprctl dispatch workspace r+1"
    },
    "pulseaudio": {
        "scroll-step": 10, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        // "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
        // "format-bluetooth-muted": "ğŸ”‡ {icon}ïŠ” {format_source}",
        "format-muted": "ğŸ”‡ {format_source}",
        "format-source": "ï„°",
        "format-source-muted": "ï„±",
        "format-icons": {
            "headphone": "ğŸ§",
            "hands-free": "ğŸ§",
            "headset": "ğŸ§",
            "phone": "ğŸ“",
            "portable": "ğŸ“",
            "car": "ğŸš—",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click-right": "pavucontrol"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 500,
        "orientation": "horizontal"
    },
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "(.*) - Google Chrome": "$1",
            "Visual Studio Code - (.*)": "VSCode - $1"
        },
        "separate-outputs": true,
        "max-length": 60,
        "icon": true
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"]
    },
    "network": {
        "tooltip": false,
        "format-wifi": "ğŸ›œ {essid} ({signalStrength}%)",
        "format-ethernet": " ğŸŒ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "Disconnected",
        "on-click-right": "nm-connection-editor"
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10,
        "reverse-direction": true
    },
    "clock": {
        "tooltip-format": "{:%Y-%m-%d %A %H:%M:%S}",
        "locale": "zh_CN.UTF-8",
        "timezones": ["Asia/Shanghai"],
        "format-alt": "{:%Yå¹´%mæœˆ%dæ—¥ %a}"
    },
    "cpu": {
        "interval": 15,
        "format": "ï‹› {}%",
        "max-length": 10,
        "on-click": "kitty btop"
    },
    "memory": {
        "interval": 30,
        "format": "ïƒ‰ {}%",
        "max-length": 10
    },
    "privacy": {
        "icon-spacing": 10,
        "icon-size": 20,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 20
            },
            {
                "type": "audio-in",
                // "format": "ï„° ",
                "tooltip": true,
                "tooltip-icon-size": 20
            }
        ]
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ï‚¢<span foreground='red'><sup>ï‘„</sup></span> ",
            "none": "ï‚¢ ",
            "dnd-notification": "ï‡·<span foreground='red'><sup>ï‘„</sup></span> ",
            "dnd-none": "ï‡· ",
            "inhibited-notification": "ï‚¢<span foreground='red'><sup>ï‘„</sup></span> ",
            "inhibited-none": " ï‚¢ ",
            "dnd-inhibited-notification": "ï‡·<span foreground='red'><sup>ï‘„</sup></span> ",
            "dnd-inhibited-none": " ï‡· "
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/launcher": {
        "format": "ïŒƒ",
        "on-click": "rofi -show drun --terminal kitty",
        "on-click-right": "rofi -show run --terminal kitty"
    },
    "custom/power": {
        "format": "â» ",
        "tooltip": "false"
    },
    "custom/quit": {
